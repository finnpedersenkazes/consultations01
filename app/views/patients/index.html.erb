<div class="container">
      <h1 class="text-center">Patients</h1>
      <p>
        <%= link_to "Home Page", root_path, class: "btn btn-primary" %>
        <%= link_to "Add Patient", new_patient_path, class: "btn btn-primary" %>
      </p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td><%= link_to patient.name, patient_path(patient) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p>
        <%= link_to "Doctors", doctors_path, class: "btn btn-primary"  %>
        <%= link_to "Patients", patients_path, class: "btn btn-primary"  %>
      </p>
</div>
